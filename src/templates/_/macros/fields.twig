{% macro display(field) %}
    {% switch field.type %}
        {% case 'checkbox' %}
            <input type="checkbox" name="{{ field.name }}" {% if field.value %} checked="checked" {% endif %}>
        {% case 'text' %}
            <input type="text" name="{{ field.name }}" value="{{ field.value }}"/>
        {% default %}

    {% endswitch %}
{% endmacro %}